<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 ">
      <h1> Add a job </h1>

      <%= simple_form_for [:admin,@job] do |f| %>

      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :is_hidden %>
        <%= f.submit "Submit" %>
      <% end %>
    </div>
  </div>
</div>
